<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_drink_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5D5D5">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4EBBD1"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:id="@+id/pec_title_textview"
        android:text="실시간 (음주량/주량)%"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drop_water_32"
        android:id="@+id/imageView2"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/water_0"
        android:id="@+id/cup_imageview"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textSize="50dp"
        android:textColor="#000000"
        android:id="@+id/pec_textview"
        android:layout_marginLeft="100dp"
        android:layout_alignBottom="@+id/cup_imageview"
        android:layout_alignEnd="@+id/cup_imageview"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drop_water_32"
        android:id="@+id/imageView"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="49dp"
        android:layout_above="@+id/cup_imageview"
        android:layout_alignEnd="@+id/cup_imageview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지나친 음주는 건강에 해롭습니다"
        android:textSize="17dp"
        android:layout_marginBottom="8dp"
        android:textColor="#777777"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/cup_imageview"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="사용자의 간 파괴(+100)"
            android:id="@+id/sentence_textview"
            android:textColor="#FFFFFF"
            android:textScaleX="1.5"
            android:scaleY="1.6"
            android:layout_below="@+id/cup_imageview"/>
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/flame_icon"
            android:id="@+id/imageView3" />
    </LinearLayout>
</RelativeLayout>
